@model Driver


<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="mt-3 p-3 shadow rounded">
                <div class="text-center border-bottom">
                    <h2 class="text-info">
                        Add New Driver
                    </h2>
                </div>
                <div>
                    @Html.ValidationSummary()
                </div>
                <div class="mt-3 p-3">
                    <form action="/Driver/Add" method="post" enctype="multipart/form-data">
                        <div class="mb-3 row">
                            <label class="col-3 col-form-label">
                                Name
                            </label>
                            <div class="col-9">
                                @Html.TextBoxFor(m=>m.DriverName,new{@class="form-control",placehodler="Enter Name", required="required"} )
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label class="col-3 col-form-label">
                                Address
                            </label>
                            <div class="col-9">
                                @Html.TextBoxFor(m=>m.Address,new{@class="form-control",placehodler="Enter Address", required="required"} )
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label class="col-3 col-form-label">
                                Age
                            </label>
                            <div class="col-9">
                                @Html.TextBoxFor(m=>m.Age,new{@class="form-control",placehodler="Enter Age",type="number", required="required"} )
                            </div>
                        </div>


                        <div class="mb-3 row">
                            <label class="col-3 col-form-label">
                                Experience
                            </label>
                            <div class="col-9">
                                @Html.TextBoxFor(m=>m.Experience,new{@class="form-control",type="number",placehodler="Experience",required="required"} )
                            </div>
                        </div>
                        
                        <div class="mb-3 row">
                            <label class="col-3 col-form-label">
                                Mobile number
                            </label>
                            <div class="col-9">
                                @Html.TextBoxFor(m=>m.MobileNumber,new{@class="form-control",placehodler="Mobile number",required="required"} )
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label class="col-3 col-form-label">
                                Driver Image
                            </label>
                            <div class="col-9">
                                @Html.TextBoxFor(m=>m.DriverImage,new{@class="form-control",type="file",required="required"} )
                            </div>
                        </div>

                        

                        



                        <div class="mb-3">
                            <button class="btn btn-sm shadow rounded btn-dark" type="reset">Clear</button>
                            <button class="btn btn-sm shadow rounded btn-success" type="submit">Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>