@model List<Driver>
@{
    ViewBag.Title = "Driver";
}


<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="mt-3 p-3 shadow rounded">
                <div class="d-flex justify-content-between mb-3 p-3">
                    <h3 class="text-info">
                        Car list
                    </h3>
                    @Html.ActionLink("Add new Driver","Add","Driver",null,new{@class="btn btn-sm btn-primary text-center"})
                </div>
                <div class="p-3">
                    <table class="table table-responsive table-bordered text-center">
                        <thead class="text-info">
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Address</th>
                                <th>Age</th>
                                <th>Experience</th>
                                <th>Mobile Number</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var driver in Model)
                            {
                                <tr>
                                    <td>@driver.Id</td>
                                    <th>@driver.DriverName</th>
                                    <th>@driver.Address</th>
                                    <th>@driver.Age</th>
                                    <th>@driver.Experience</th>
                                    <th>@driver.MobileNumber</th>
                                </tr>
                            }
                          
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

