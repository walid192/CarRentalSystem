@model List<Car>
@{
    ViewBag.Title = "Car";
}
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="mt-3 p-3 shadow rounded">
                <div class="d-flex justify-content-between mb-3 p-3">
                    <h3 class="text-info">
                        Car list
                    </h3>
                    @Html.ActionLink("Add new car","Add","Car",null,new{@class="btn btn-sm btn-primary text-center"})
                </div>
                <div class="p-3">
                    <table class="table table-responsive table-bordered text-center">
                        <thead class="text-info">
                            <tr>
                                <th>ID</th>
                                <th>Brand</th>
                                <th>Model</th>
                                <th>Seating Capacity</th>
                                <th>Engine</th>
                                <th>Fuel type</th>
                                <th>Passing year</th>
                                <th>Car number</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var car in Model)
                            {
                                <tr>
                                    <td>@car.Id</td>
                                    <th>@car.Brand</th>
                                    <th>@car.Model</th>
                                    <th>@car.SeatingCapacity</th>
                                    <th>@car.Engine</th>
                                    <th>@car.FuelType</th>
                                    <th>@car.PassingYear</th>
                                    <th>@car.CarNumber</th>

                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

